@using eShopSolution.WebApp.Models.Products.Schemas
@model List<Product>
@{
    ViewData["Title"] = "Products";
}
@section css{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/Home.css" type="text/css" media="all" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </environment>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Products" asp-action="create" asp- class="btn btn-info">
                <i class="fas fa-plus mx-1"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Origin Price
                    </th>
                    <th>
                        ViewCount
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.Name</td>
                        <td width="10%">@obj.Price</td>
                        <td width="15%">@obj.OriginalPrice</td>
                        <td width="15%">@obj.ViewCount</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="create" asp-controller="Products" class="btn btn-primary mx-2 bg-color-infosuccess bg-color-info-hover">
                                    <i class="fas fa-edit mx-2"></i>Update
                                </a>
                                <a asp-route-Id="@obj.Id" asp-action="delete" asp-controller="Products" class="btn btn-danger mx-2 bg-color-pinkdanger bg-color-pinkdanger-hover">
                                    <i class="far fa-trash-alt mx-2"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exists.</p>
    }

</div>
