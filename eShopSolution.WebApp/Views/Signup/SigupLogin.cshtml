@model UserLogin
@using eShopSolution.WebApp.Models.Login.Schemas
@{
    ViewData["Title"] = "Login";
}
@section css{
    <environment include="Development">
        <link rel="stylesheet" href="~/css/Home.css" type="text/css" media="all" asp-append-version="true" />
    </environment>
}
<form class="container w-50 mt-5" asp-action="checkLogin" asp-controller="Login">
    <div class="mb-3">
        <label for="Username" class="form-label">Username</label>
        <input asp-for="username" class="form-control w-75" id="Username" value="@Model.username">
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input asp-for="password" type="password" class="form-control w-75" id="Password" value="@Model.password">
    </div>
    <button type="submit" class="btn btn-primary bg-color-pink ele-hover">Login</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary mx-2">
        <i class="fas fa-edit">Back</i>
    </a>
</form>


